{
  "name": "expense-management-system",
  "version": "1.0.0",
  "description": "Microservices-based Expense Management System",
  "private": true,
  "workspaces": [
    "server/api-gateway",
    "server/auth-service",
    "server/user-service",
    "server/expense-service",
    "server/approval-service",
    "server/currency-service",
    "server/notification-service",
    "server/queue-service"
  ],
  "scripts": {
    "install:all": "yarn install && yarn workspaces run install",
    "dev:gateway": "cd server/api-gateway && yarn dev",
    "dev:auth": "cd server/auth-service && yarn dev",
    "dev:user": "cd server/user-service && yarn dev",
    "dev:expense": "cd server/expense-service && yarn dev",
    "dev:approval": "cd server/approval-service && yarn dev",
    "dev:currency": "cd server/currency-service && yarn dev",
    "dev:notification": "cd server/notification-service && yarn dev",
    "dev:queue": "cd server/queue-service && yarn dev",
    "build:all": "yarn workspaces run build",
    "check:typescript": "./check-typescript.sh",
    "check:build": "./check-build.sh",
    "typecheck": "./check-build.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "psql -h localhost -U postgres -d expense_management -f database/postgres/migrations/*.sql",
    "db:seed": "psql -h localhost -U postgres -d expense_management -f database/postgres/seeds/*.sql",
    "mongo:setup": "mongosh expense_management database/mongodb/collections/*.js && mongosh expense_management database/mongodb/indexes/*.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
